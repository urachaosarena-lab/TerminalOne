# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Solana Configuration
# Primary RPC (Helius - get FREE at helius.dev)
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
# Fallback RPC endpoints (comma-separated)
SOLANA_RPC_FALLBACK_URLS=https://api.mainnet-beta.solana.com,https://rpc.ankr.com/solana
# WebSocket endpoint for real-time updates
SOLANA_WS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
# Jito RPC for bundled transactions (optional but recommended)
JITO_RPC_URL=https://mainnet.block-engine.jup.ag
JITO_AUTH_KEYPAIR=
SOLANA_NETWORK=mainnet-beta
# SOLANA_NETWORK=devnet (for development)

# Bot Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Database (optional - for future features)
DATABASE_URL=

# Admin Configuration
ADMIN_CHAT_IDS=your_telegram_user_id_here

# Security Configuration
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WALLET_ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# API Keys (for future integrations)
COINGECKO_API_KEY=
JUPITER_API_KEY=
